</span><span class="c1"></span><span class="k">if</span><span class="p">(</span><span class="nx">accept</span><span class="p">.</span><span class="nx">indexOf</span><span class="p">(</span><span class="s1">&#39;xml&#39;</span><span class="p">)){</span>
